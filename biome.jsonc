// Biome　個別設定
{
	"root": false,
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**/*.{ts,tsx,md}",
			"!.next",
			"!.turbo",
			"!.vercel",
			"!.vscode",
			"!node_modules"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noConsole": "warn",
				"noArrayIndexKey": "off"
			},
			"correctness": {
				"useUniqueElementIds": "off"
			}
		}
	}
}